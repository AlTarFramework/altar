# add me to the pile
projects += linear

# project meta-data
linear.major := $(repo.major)
linear.minor := $(repo.minor)
linear.micro := $(repo.micro)
linear.revision := $(repo.revision)

# the top level directory
linear.home := $(project.home)/models/linear

# use the altar area for build temporaries
linear.tmpdir = ${builder.dest.staging}altar/models/linear/

# linear consists of a python package
linear.packages := linear.pkg

# the linear package meta-data
linear.pkg.root := linear/
linear.pkg.pycdir := $(builder.dest.pyc)altar/models/linear/
linear.pkg.drivers := linear

# end of file
