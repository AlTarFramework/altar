; the linear app
linear:
    ; test case configuration
    model:
        ; the name of the test case
        case = input
        ; the number of free parameters
        parameters = 8
        ; the number of observations
        observations = 8

        ; parameter sets
        parametersets:
            pset1 = contiguous
            pset2 = contiguous
            
            pset1:
                offset = 0
                count = 4
                prior = gaussian
                prior:
                    mean = 0
                    sigma = 2
                prep = gaussian
                prep:
                    mean = 0
                    sigma = 2
            pset2:
                offset = 4
                count = 4
                prior = uniform
                prior:
                    support = (-2, 2)

    ; shell
    ; shell = mpi.shells.mpirun ; for running with mpi

    ; run configuration
    job.tasks = 1 ; number of tasks per host
    job.gpus = 1  ; number of gpus per task
    job.chains = 2**12 ; number of chains per task

    ; sampler
    controller:
        sampler.steps = 100
    	

    rng:
        seed = 10
        algorithm = mt19937


; for parallel runs
mpi.shells.mpirun # altar.plexus.shell:
    tasks = 2
    extra = -mca btl self,tcp

; end of file
